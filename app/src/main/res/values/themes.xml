<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobileDimensioningParcelDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Base.ButtonGeneric" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">
            @style/Button.ShapeStyle
        </item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="Theme.Base.ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">
            @style/Button.ShapeStyle
        </item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="Button.ShapeStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">9dp</item>
        <item name="cornerSizeTopLeft">9dp</item>
        <item name="cornerSizeBottomRight">9dp</item>
        <item name="cornerSizeBottomLeft">9dp</item>
    </style>

    <style name="Theme.MobileDimensioningParcelDemo.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />
    <style name="Theme.MobileDimensioningParcelDemo.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

</resources>
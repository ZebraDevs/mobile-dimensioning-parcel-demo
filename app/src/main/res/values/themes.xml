<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobileDimensioningParcelDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Base.ButtonGeneric" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">
            @style/Button.ShapeStyle
        </item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/teal_700</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="Theme.Base.ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">
            @style/Button.ShapeStyle
        </item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="strokeColor">@color/teal_700</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="Button.ShapeStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">9dp</item>
        <item name="cornerSizeTopLeft">9dp</item>
        <item name="cornerSizeBottomRight">9dp</item>
        <item name="cornerSizeBottomLeft">9dp</item>
    </style>

    <style name="Theme.MobileDimensioningParcelDemo.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />
    <style name="Theme.MobileDimensioningParcelDemo.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

</resources>